---
export interface Props {
    name: string,
    key: string,
    link: string,
    logoUrl: string
}
const {name, key, link, logoUrl} = Astro.props
---
<div class="p-4 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow overflow-hidden hover:shadow-xl transition-shadow duration-300">
    <a href={link} target="_blank" rel="noopener noreferrer" class="flex flex-col items-center justify-center space-y-4">
        <div class="w-full h-48">
            <img src={logoUrl} alt={name} class="object-cover h-full w-full rounded-t-3xl" />
        </div>
        <div class="flex flex-col items-center justify-center space-y-2">
            <h3 class="text-lg md:text-xl font-semibold text-center">
                {name}
            </h3>
           
            <p class="text-center text-sm text-gray-500">{key} â†’</p>
        </div>
    </a>
</div>
