---
import Paragraph from '../shared/Paragraph.astro';

export interface Props{
    title:string,
    description:string,
    imageUrl:string,
    language: string
}

const {title, description, imageUrl, language} = Astro.props
---
<style>
    /* Add this to your styles */
@keyframes cardEntry {
  0% {
    transform: translateY(30px) scale(0.95);
    opacity: 0;
  }
  100% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.service-card {
  animation: cardEntry 0.6s ease-out forwards;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
  transform: scale(1.03);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
}

</style>
<div class="service-card flex flex-col relative p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow overflow-hidden">
    <div class="flex-none w-full h-1/2 ">
        <img src={imageUrl} alt={title} class="w-full h-full object-cover pb-5 rounded-t-3xl"/>
    </div>
    <div class="flex-grow ${language === 'es' ? 'pt-40' : 'pt-60'} space-y-4">
        <h2 class="text-lg md:text-xl font-semibold text-heading-2">
            {title}
        </h2>
        <Paragraph>
            {description}
        </Paragraph>
    </div>
    <span class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"></span>
</div>