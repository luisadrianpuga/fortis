
---
import Paragraph from '../shared/Paragraph.astro';

export interface Props {
  name: string;
  testimonial: string;
  imageUrl: string;
}

const { name, testimonial, imageUrl } = Astro.props;
---
<div class="max-w-lg mx-auto bg-white rounded-xl shadow-md overflow-hidden md:flex md:flex-col">
  <div class="relative flex items-center justify-center h-64 md:h-auto">
    <div class="bg-gradient-to-br to-transparent absolute z-10 w-full h-full" style={{mixBlendMode: 'multiply'}}></div>
    <img
      class="object-cover relative z-0 max-h-full mx-auto"
      src={imageUrl}
      alt={name}
    />
  </div>
  <div class="p-8">
    <div class="text-xl tracking-wide text-primary font-bold text-center">
      {name}
    </div>
    <div class="mt-2 text-gray-500 text-sm text-center">
      <Paragraph>{testimonial}</Paragraph>
    </div>
  </div>
</div>