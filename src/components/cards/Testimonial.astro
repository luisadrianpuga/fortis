---
import Paragraph from '../shared/Paragraph.astro';

export interface Props {
  name: string;
  testimonial: string;
  imageUrl: string;
}

const { name, testimonial, imageUrl } = Astro.props;
---
<div class="bg-white rounded-xl shadow-md overflow-hidden md:flex md:flex-col mr-4" >
  <div class="relative">
    <img
      src={imageUrl}
      alt={name}
      style="object-fit: cover;"
    />
  </div>
  <div class="pt-8 text-center">
    <div class="text-xl tracking-wide text-primary font-bold">
      {name}
    </div>
    <div class="mt-2 pb-3  text-gray-500" style="font-size: 18px;">
      <Paragraph>{testimonial}</Paragraph>
    </div>
  </div>
</div>
