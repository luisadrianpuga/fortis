}

.snap-start {
  width: 100%;
  flex-shrink: 0;
  min-height: 40px; 
  display: flex; 
  flex-direction: column; 
  align-items: stretch; 
  overflow: hidden; 
  justify-content: space-between; 
}

@media screen and (min-width: 768px) { 
