import Title from "../shared/Title.astro";
---

<style>
    .snap {
    scroll-snap-type: mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* For Firefox */
  }

  .snap::-webkit-scrollbar {
    display: none; /* For Chrome, Safari and Opera */
  }

  .snap-x {
    scroll-snap-type: x mandatory;
  }

  .snap-start {
    width: 100%;
    flex-shrink: 0;
    min-height: 200px; /* Update this to the minimum height you want */
    display: flex; /* Make this a flex container */
    flex-direction: column; /* Stack items vertically */
    align-items: stretch; /* Make items fit within the container */
    overflow: hidden; /* Ensure nothing goes beyond the card boundaries */
    justify-content: space-between; /* Distribute space evenly between items */
  }

  @media screen and (min-width: 768px) { /* Adjust this value based on when you want to switch to desktop view */
      .snap-start {
          width: 30%;
      }
  }

  .Service img {
      object-fit: cover;
      width: 100%;
      height: auto; /* This will maintain the aspect ratio of the image */
  }




  .snap-center {
    scroll-snap-align: center;
  }

</style>

