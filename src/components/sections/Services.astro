---
import Service from "../cards/Service.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section id="services">
    <Container className="space-y-10 md:sapce-y-12">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                Our Services
            </Title>
            <Paragraph>
                A one-stop shop for Insurance, Real Estate, and More!
            </Paragraph>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <Service 
                title="Insurance Brokerage Services" 
                description="Our Insurance Brokerage Services include commercial insurance, general liability, workers compensation, commercial umbrellas, term life insurance, index universal life insurance, whole life insurance, personal lines insurance for auto and homeowners, as well as E&O and professional liability." 
                imageUrl="/images/image1.webp", language="es">
            </Service>
            <Service title="Worker's Compensation and General Liability Insurance Services" description="Opt for streamlined Worker's Comp and General Liability Insurance. It's designed to protect your business efficiently against employee and third-party risks, allowing you to focus on growth with peace of mind.", imageUrl='https://images.pexels.com/photos/585419/pexels-photo-585419.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1', language="es">
            </Service>
            <Service title="Restaurant Business Insurance" description="If you’re a restaurant owner, you need restaurant insurance. We know the risks you face on a daily basis, and we’re here to help with whatever comes your way.", imageUrl='https://images.pexels.com/photos/375468/pexels-photo-375468.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1', language="es">
            </Service>
            <Service title="Landscaping Business Insurance Through Every Season" description="We know how hard you work, and we know the risks you face. Get the landscaping business insurance coverage that understands your needs – and always has your back.", imageUrl='https://images.pexels.com/photos/13630739/pexels-photo-13630739.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1', language="es">
            </Service>
            
            <Service 
                title="Real Estate Services" 
                description="Our Real Estate Services offer representation for sellers, buyers, and real estate investors. We also support real estate flippers, buy-and-hold investors, and wholesalers." 
                imageUrl="/images/home.jpeg"
                language="es">
            </Service>

            <Service 
                title="LegalShield Memberships" 
                description="Our LegalShield Memberships cover both commercial and personal memberships, providing assistance with living wills, trust setup, contract reviews, consultations, moving violations representation, and discounted legal defense." 
                imageUrl="https://images.pexels.com/photos/5668473/pexels-photo-5668473.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                language="es"> 
            </Service>
            
           
        </div>
    </Container>
</section>


<style>
/* Base styles for service cards */
.service-card {
    opacity: 0;
    transform: scale(0.9);
    animation: fadeInScale 0.8s forwards;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Fade-up animation for text */
@keyframes fadeUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Apply fade-up animation to title and paragraph */
.title, .paragraph {
    opacity: 0;
    animation: fadeUp 0.8s forwards;
    transition: opacity 0.3s ease, transform 0.3s ease;
}

/* Stagger animation for title and paragraph */
.title {
    animation-delay: 0.2s;
}

.paragraph {
    animation-delay: 0.4s;
}

/* Keyframes for fade-in and scale-up effect */
@keyframes fadeInScale {
    to {
        opacity: 1;
        transform: scale(1);
    }
}

/* Stagger animation for each card */
.service-card:nth-child(1) {
    animation-delay: 0.2s;
}

.service-card:nth-child(2) {
    animation-delay: 0.4s;
}

.service-card:nth-child(3) {
    animation-delay: 0.6s;
}

.service-card:nth-child(4) {
    animation-delay: 0.8s;
}

.service-card:nth-child(5) {
    animation-delay: 1s;
}

.service-card:nth-child(6) {
    animation-delay: 1.2s;
}



</style>