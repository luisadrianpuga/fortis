---
import Service from "../cards/Service.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
---

<section id="services">
    <Container className="space-y-10 md:sapce-y-12">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                Our Services
            </Title>
            <Paragraph>
                A one-stop shop for Insurance, Real Estate, and More!
            </Paragraph>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <Service 
                title="Insurance Brokerage Services" 
                description="Our Insurance Brokerage Services include commercial insurance, general liability, workers compensation, commercial umbrellas, term life insurance, index universal life insurance, whole life insurance, personal lines insurance for auto and homeowners, as well as E&O and professional liability." 
                imageUrl="/images/image1.webp", language="es">
            </Service>
            <Service title="Worker's Compensation and General Liability Insurance Services" description="Opt for streamlined Worker's Comp and General Liability Insurance. It's designed to protect your business efficiently against employee and third-party risks, allowing you to focus on growth with peace of mind.", imageUrl='https://images.pexels.com/photos/585419/pexels-photo-585419.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1', language="es">
            </Service>
            <Service title="Motorsports Insurance" description="Specialized Coverage for Motorsports and Classic Cars: Safeguard your valuable assets with our tailored Motorsports and Classic Car Insurance Services. Because your passion deserves exceptional protection.", imageUrl='/images/motorsports.webp', language="es">
            </Service>
            <Service 
                title="Real Estate Services" 
                description="Our Real Estate Services offer representation for sellers, buyers, and real estate investors. We also support real estate flippers, buy-and-hold investors, and wholesalers." 
                imageUrl="/images/home.jpeg"
                language="es">
            </Service>

            <Service 
                title="LegalShield Memberships" 
                description="Our LegalShield Memberships cover both commercial and personal memberships, providing assistance with living wills, trust setup, contract reviews, consultations, moving violations representation, and discounted legal defense." 
                imageUrl="https://images.pexels.com/photos/5668473/pexels-photo-5668473.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                language="es"> 
            </Service>
           
           
        </div>
    </Container>
</section>
